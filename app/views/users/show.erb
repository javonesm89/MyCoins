<%= @user.name.upcase %> | 
<% if @user.salary == 0 %>
    <h3>Salary hasn't been set. Set now.</h3>
    <%= form_for(@user) do |f| %>
        Salary: <%= f.text_field :salary %>
        Confirm Password: <%= f.password_field :password %>
        <%= f.submit "Update Salary" %>
    <% end %>
   <% else %>
    <%= @user.salary %>
<% end %>
<p>
    <% @actions.each do |action| %>
        <%= link_to action.name, user_action_path(@user,action) %> |
    <% end %>
